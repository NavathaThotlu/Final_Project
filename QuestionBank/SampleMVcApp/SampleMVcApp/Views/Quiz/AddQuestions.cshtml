                @Html.ValidationMessageFor(model => model.QA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.QB, htmlAttributes: new { @class = "control-label col-md-2" })
